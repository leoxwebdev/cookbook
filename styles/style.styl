@import 'nib'

// Common
html,
body
	background-color #f5f5f5
	
ul
	padding 0
	list-style none outside
		
h1, h5
	text-align center
a:hover,
a:focus
	text-decoration none
label
	margin-bottom 1em
	color #777
// Header	
header
	font-family 'Courgette'
#head
	margin 0 auto
	width 50%
	margin-top -20px
	margin-bottom 20px 
	text-shadow: -1px -1px 1px #fff
	h5
		margin-top -40px
	h1
		font-size 5em
		a
			color #444
		a:hover
			color #2F0202
			
// Main			
#recipes
	font-family 'Courgette'
	text-align center
	.timestamp
		padding-right 0
		text-align center
	h1
		font-family 'Rosario', sans-serif
		font-style italic
		color #1A0000
	a
		color #534444
	a:hover
			color #2F0202
		
.recipeHeaderContainer
	padding-top 2% 
	font-family 'Courgette'
	text-align center
	a
		color #3F2205
.recipeHeaderTitle
	display inline-block
	h1 
		color #3E3131
		font-family 'Rosario', sans-serif
		font-style italic 
		font-size 2em 
.recipeHeaderTools
	position absolute
	display inline-block
	right 20%
	a
		color #777
		padding 0 5px
	a:hover
			color #444 
	
.ingridients
	font-family 'Courgette'
	text-align center
.content
	font-family 'Ubuntu:500', sans-serif
	text-indent 1.5em
	text-align justify
	margin-top 1em 
	
.timestamp
	color #888 
	font-family 'Courgette'
	letter-spacing: 2px
	text-align right
	padding-right 10% 
.timeTitle
	display inline-block
.timeValue
	display inline-block
	padding-left 1em 
	text-align left

// Sidebar
#categories
	li
		padding 5px
		border-left 1px double #5B4F4F
		transition: border-left .4s
	.active
		background-color #FFF 
	li:hover
		border-left 4px double #5B4F4F
		transition: border-left .4s
	a
		font-family 'Courgette'
		color #3C3131

#new
	margin-bottom 2em
	a
		font-family 'Courgette'
		color #4A3939 
		font-size 1.5em 
		padding 10px 
		font-weight bold
		line-height 1em
		transition: letter-spacing .5s
	a:hover
		letter-spacing 2px 
		transition: letter-spacing .2s

#formDel
	position absolute
	right 0

.modal-body, .modal-header
	font-family 'Ubuntu:500', sans-serif
	
.gradient
	border-top 1px solid #fff
	background linear-gradient(to bottom, #f2f2f2 0%,rgba(255,255,255,0) 30%,rgba(255,255,255,0) 100%)
	box-shadow 0px -1px 0px 0px #e3e3e3

// Footer
footer
	margin-top 5% 
	padding 1% 
	font-family 'Dancing Script' cursive
	text-align center